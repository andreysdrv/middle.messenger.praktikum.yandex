<html lang='ru'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap'
			rel='stylesheet'
		/>
		<link href='../styles/index.pcss' rel='stylesheet' />
		<title>Awesome messenger</title>
	</head>
	<body>
		<main>
			<nav>
				<a href='../index.hbs'>Home</a>
				Profile page
			</nav>

			<div class='profile'>
				<sidebar class='profile__back-button-wrapper'>
					<button class='profile__back-button'></button>
				</sidebar>
				<div class='profile__info'>
					<form name='settings' class='profile__form'>
						<div class="profile__form-body">
							{{> form-input/form-input type="email" id="email" name="email" placeholder="Почта"  }}
							{{> form-input/form-input type="text" id="login" name="login" placeholder="Логин"  }}
							{{> form-input/form-input type="text" id="first_name" name="first_name" placeholder="Имя"  }}
							{{> form-input/form-input type="text" id="second_name" name="second_name" placeholder="Фамилия"  }}
							{{> form-input/form-input type="text" id="second_name" name="second_name" placeholder="Имя в чате"  }}
							{{> form-input/form-input type="tel" id="display_name" name="display_name" placeholder="Телефон"  }}
						</div>
						<div class="profile__form-footer">
							<button class='profile__form-save-button'>Сохранить</button>
						</div>
					</form>
				</div>
			</div>
		</main>
	</body>
</html>