<html lang='ru'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap'
			rel='stylesheet'
		/>
		<link href='../styles/index.pcss' rel='stylesheet' />
		<title>Awesome messenger</title>
	</head>
	<body>
		<main>
			<div>
				<a href='../index.hbs'>Home</a>
				Signin page
			</div>

			<div class='wrapper'>
				<form class='form' name='signin'>
					<h2 class='form__header'>Регистрация</h2>
					<div class='form__body'>
						{{> form-input/form-input type="email" id="email" name="email" placeholder="Почта"  }}
						{{> form-input/form-input type="text" id="login" name="login" placeholder="Логин"  }}
						{{> form-input/form-input type="text" id="first_name" name="first_name" placeholder="Имя"  }}
						{{> form-input/form-input type="text" id="second_name" name="second_name" placeholder="Фамилия"  }}
						{{> form-input/form-input type="tel" id="phone" name="phone" placeholder="Телефон"  }}
						{{> form-input/form-input type="password" id="password" name="password" placeholder="Пароль"}}
						{{> form-input/form-input type="password" id="password_repeat" name="password" placeholder="Повторите пароль" errorText="Пароли не совпадают"}}
					</div>
					<div class='form__footer'>
						<button type='submit' class='form__footer-button'>Создать аккаунт</button>
						<a href='login.hbs' class='form__footer-link'>Войти</a>
					</div>
				</form>
			</div>
		</main>
	</body>
</html>