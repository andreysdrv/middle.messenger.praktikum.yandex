<html lang='ru'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap" rel="stylesheet">
		<link href='../styles/index.pcss' rel='stylesheet' >
		<title>Awesome messenger</title>
	</head>
	<body>
		<main>
		<nav>
			<a href='../index.hbs'>Home</a>
			Login page
		</nav>

		<div class='wrapper'>
			<form class='form' name='login'>
				<h2 class='form__header'>Вход</h2>
				<div class="form__body">
					{{> form-input/form-input type="text" id="login" name="login" placeholder="Логин" errorText="Неверный логин" }}
					{{> form-input/form-input type="password" id="password" name="password" placeholder="Пароль"}}
				</div>
				<div class='form__footer'>
					<button type='submit' class='form__footer-button'>Войти</button>
					<a href='signin.hbs' class='form__footer-link'>Ещё не зарегистрированы?</a>
				</div>
			</form>
		</div>
		</main>
	</body>
</html>
