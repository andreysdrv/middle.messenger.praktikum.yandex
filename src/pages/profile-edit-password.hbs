<html lang='ru'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap'
			rel='stylesheet'
		/>
		<link href='../styles/index.pcss' rel='stylesheet' />
		<title>Awesome messenger</title>
	</head>
	<body>
		<main>
			<nav>
				<a href='../index.hbs'>Home</a>
				Profile page
			</nav>

			<div class='profile'>
				<sidebar class='profile__back-button-wrapper'>
					<button class='profile__back-button'></button>
				</sidebar>
				<div class='profile__info'>
					<form name='settings' class='profile__form'>
						<div class="profile__form-body">
							{{> form-input/form-input type="password" id="oldPassword" name="oldPassword" placeholder="Старый пароль"}}
							{{> form-input/form-input type="password" id="newPassword" name="newPassword" placeholder="Новый пароль"}}
						{{> form-input/form-input type="password" id="newPassword" name="newPassword" placeholder="Повторите новый пароль"}}
						</div>
						<div class="profile__form-footer">
							<button class='profile__form-save-button'>Сохранить</button>
						</div>
					</form>
				</div>
			</div>
		</main>
	</body>
</html>